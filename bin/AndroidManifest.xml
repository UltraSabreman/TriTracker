<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.tritracker"
	android:versionCode="1"
	android:versionName="1.0" >

	<supports-screens
		android:anyDensity="true"
		android:largeScreens="true"
		android:normalScreens="true"
		android:resizeable="true"
		android:smallScreens="true" />

	<uses-permission android:name="android.permission.INTERNET" />

	<uses-sdk
		android:minSdkVersion="16"
		android:targetSdkVersion="19" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:logo="@drawable/ic_buss_white"
		android:theme="@style/AppTheme" >
		
		<service 
			android:name="com.example.tritracker.activities.MainService"
			android:label="Tritracker Update Service"/>
			
		<!-- <activity
			android:name="com.example.tritracker.activities.FavoritesActivity"
			android:windowSoftInputMode="stateHidden" />-->
			
		<activity
			android:name="com.example.tritracker.activities.MainActivity"
			>
			
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
	
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity
			android:name="com.example.tritracker.activities.BussListActivity"
			android:windowSoftInputMode="stateHidden" >
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.example.tritracker.MainActivity" />
		</activity>
		<!-- <activity
			android:name="com.example.tritracker.activities.HistoryActivity"
			android:label="@string/title_activity_history_view"
			android:windowSoftInputMode="stateHidden" >
		</activity> -->
		<activity
			android:name="com.example.tritracker.activities.AlertListActivity"
			android:label="@string/title_activity_alert_details" >
		</activity>
		<activity
			android:name="com.example.tritracker.activities.SettingsActivity"
			android:label="@string/title_activity_settings" >
		</activity>
		<activity
			android:name="com.example.tritracker.activities.TestActivity"
			android:label="@string/title_activity_test" >
		</activity>
	</application>

</manifest>
